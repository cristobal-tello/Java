<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">
	
	<context:annotation-config/>	<!-- This app will use annotations -->
	
	<bean id="unique_id_fruit" class="autoValueAnnotation.Fruit">
		<property name="description" value="Setting description using XML way" />
	</bean>
	
	<bean id="unique_id_fruit_annotation" class="autoValueAnnotation.Fruit" />	<!-- description is set using Annotations -->
	
</beans>
